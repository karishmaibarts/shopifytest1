 {% if template contains 'product' %}
  {% assign featured_image = product.images.first | default: product.featured_image %}
  <div class="sticky_cart sticky_cart_display">
    <div class="product-details">
      <div class="prd-details prd-details-left">
        <div class="prd-image-title">
          <img src="{{ featured_image | img_url: "300x" }}" />
          <h3>{{ product.title }}</h3>
        </div>
      </div>
      <div class="prd-details prd-details-right">
      	<div class="prd-image-price-cart">
          <quantity-input class="quantity prd-details-quantity ">
                <button class="quantity__button no-js-hidden" name="minus" type="button">
                  <span class="visually-hidden">Decrease quantity for rug product1</span>
                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="icon icon-minus" fill="none" viewBox="0 0 10 2">
  						<path fill-rule="evenodd" clip-rule="evenodd" d="M.5 1C.5.7.7.5 1 .5h8a.5.5 0 110 1H1A.5.5 0 01.5 1z" fill="currentColor">
						</path></svg>

                </button>
                <input class="quantity__input" type="number" name="quantity" id="Quantity-template--16038660604157__main" min="1" value="1" form="product-form-template--16038660604157__main">
                <button class="quantity__button no-js-hidden" name="plus" type="button">
                  <span class="visually-hidden">Increase quantity for rug product1</span>
                 <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="icon icon-plus" fill="none" viewBox="0 0 10 10">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M1 4.51a.5.5 0 000 1h3.5l.01 3.5a.5.5 0 001-.01V5.5l3.5-.01a.5.5 0 00-.01-1H5.5L5.49.99a.5.5 0 00-1 .01v3.5l-3.5.01H1z" fill="currentColor">
                  </path></svg>

                </button>
              </quantity-input>
          <div class="prd-price">{{ product.price | money }}</div>
          <div class="cart-btn">
            <button id="btn-sticky-cart" class="cart-items btn product-form__submit button button--full-width button--secondary">Add To Cart</button>
            <span class="gif" style="display:none;"> <img src="https://cdn.shopify.com/s/files/1/0644/2126/5661/files/Loading_icon_6c0ee779-8183-44f4-b07d-e03cf389545c.gif?v=1653999450" /></span>
          </div>
        </div>
      </div>
    </div>
  </div>

{% endif %}